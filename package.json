{
  "name": "luc.as",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "astro dev --host 0.0.0.0",
    "build": "pnpm pull-fonts && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier -w --plugin-search-dir=. .",
    "pull-fonts": "aws s3 sync s3://luc.li-fonts public/fonts/closed",
    "push-fonts": "aws s3 sync public/fonts/closed s3://luc.li-fonts"
  },
  "dependencies": {
    "@types/chroma-js": "^2.4.0",
    "astro": "^2.1.4",
    "autoprefixer": "^10.4.14",
    "chroma-js": "^2.4.2",
    "date-fns": "^2.29.3"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "postcss": "^8.4.21",
    "prettier": "^2.8.6",
    "prettier-plugin-astro": "^0.8.0",
    "prettier-plugin-css-order": "^1.3.0",
    "sass": "^1.59.3",
    "shiki": "^0.14.1"
  }
}
