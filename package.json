{
  "name": "luc.as",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "engines": {
    "node": ">=18",
    "pnpm": ">=7"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "astro dev --host 0.0.0.0",
    "build": "pnpm pull-fonts && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier -w --plugin-search-dir=. .",
    "pull-fonts": "aws s3 sync s3://yklcs.com-fonts public/fonts/closed",
    "push-fonts": "aws s3 sync public/fonts/closed s3://yklcs.com-fonts",
    "cdk": "tsc -b cdk && cdk"
  },
  "dependencies": {
    "@types/chroma-js": "^2.4.0",
    "astro": "^2.4.5",
    "autoprefixer": "^10.4.14",
    "chroma-js": "^2.4.2",
    "date-fns": "^2.30.0",
    "motion": "^10.16.2"
  },
  "devDependencies": {
    "@types/node": "^20.2.3",
    "aws-cdk": "^2.79.1",
    "aws-cdk-lib": "^2.79.1",
    "constructs": "^10.2.25",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.23",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.8.1",
    "prettier-plugin-css-order": "^1.3.0",
    "sass": "^1.62.1",
    "shiki": "^0.14.2",
    "typescript": "^5.0.4"
  }
}
