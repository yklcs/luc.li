---
import Wrapper from "./Wrapper.astro"

const now = new Date().toISOString()
---

<Wrapper className={"footer-wrapper"}>
  <footer>
    Built at {now}
  </footer>
</Wrapper>

<style>
  .footer-wrapper {
    margin: 3rem 0 0 0;
  }

  footer {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: var(--neutral-60);
    font-size: 0.625em;
    font-family: var(--font-mono);
  }
</style>
